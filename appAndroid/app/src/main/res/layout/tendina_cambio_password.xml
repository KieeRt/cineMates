<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="300dp"
    android:background="@drawable/tendina_background">


    <TextView
        android:id="@+id/titoloTendinaCambioPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/titoloTendinaCambioPassword"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/semiGrey"
        app:layout_constraintEnd_toEndOf="@+id/buttonSalvaTendinaCambioPassword"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPassword"
        app:layout_constraintTop_toBottomOf="@+id/titoloTendinaCambioPassword" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@color/semiGrey"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnnullaTendinaCambioPassword"
        app:layout_constraintEnd_toEndOf="@+id/buttonSalvaTendinaCambioPassword"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPassword" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="211dp"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:text="@string/inserire_nuova_password"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPassword"
        app:layout_constraintTop_toBottomOf="@+id/view" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/buttonSalvaTendinaCambioPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPassword"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextVecchiaPasswordTendinaCambioPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/vecchia_password" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/buttonSalvaTendinaCambioPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPassword"
        app:layout_constraintTop_toBottomOf="@id/inputLayout">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNuovaPasswordTendinaCambioPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/nuova_password" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/buttonAnnullaTendinaCambioPassword"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_button_textfield"
        android:text="@string/buttonAnnulla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSalvaTendinaCambioPassword"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button_textfield"
        android:layout_marginEnd="16dp"
        android:text="@string/buttonSalva"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAnnullaTendinaCambioPassword"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>