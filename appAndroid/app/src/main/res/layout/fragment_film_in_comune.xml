<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_film_in_comune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/film_in_comune"
        android:textStyle="bold"
        android:textSize="@dimen/dimensione_titolo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_elenco_film_in_comune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimensione_sottotitolo"
        android:alpha="@dimen/text_lv2_alpha"
        android:text="@string/elenco_film_in_comune"


        app:layout_constraintStart_toStartOf="@+id/listView_film_in_comune"
        app:layout_constraintTop_toBottomOf="@+id/textView_film_in_comune"


        />

    <ListView
        android:id="@+id/listView_film_in_comune"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_elenco_film_in_comune">
    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>