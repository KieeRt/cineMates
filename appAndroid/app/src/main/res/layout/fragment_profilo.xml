<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profilo.ProfiloFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_immagineProfilo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/descrizioneImmagineProfilo"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_linkCambioImmagineProfilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/cambio_immagine_profilo"
        android:textColor="@color/linkColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_immagineProfilo" />

    <TextView
        android:id="@+id/label_textView_usernameProfilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:alpha="@dimen/text_lv2_alpha"
        android:text="@string/scrittaUsername"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_immagineProfilo" />

    <TextView
        android:id="@+id/textView_usernameProfilo"
        android:layout_width="240dp"
        android:layout_height="wrap_content"

        android:alpha="@dimen/text_lv3_alpha"
        android:ems="10"
        android:text="pippo123"
        android:gravity="center"
        app:boxStrokeColor="?attr/colorOnSurface"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_textView_usernameProfilo"
        app:layout_constraintStart_toEndOf="@+id/label_textView_usernameProfilo"
        app:layout_constraintTop_toTopOf="@+id/label_textView_usernameProfilo" />


    <TextView
        android:id="@+id/label_textView_emailProfilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/scrittaE_mail"
        android:alpha="@dimen/text_lv2_alpha"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/label_textView_usernameProfilo"
        app:layout_constraintTop_toBottomOf="@+id/label_textView_usernameProfilo" />




    <TextView
        android:id="@+id/textView_emailProfilo"
        android:layout_width="240dp"
        android:layout_height="wrap_content"

        android:ems="10"
        android:gravity="center"
        android:textSize="18sp"
        android:alpha="@dimen/text_lv3_alpha"
        android:text="pippo123@gmail.com"
        app:layout_constraintBottom_toBottomOf="@+id/label_textView_emailProfilo"
        app:layout_constraintStart_toStartOf="@+id/textView_usernameProfilo"
        app:layout_constraintTop_toTopOf="@+id/label_textView_emailProfilo" />



    <TextView
        android:id="@+id/textView_linkCambioPasswordProfilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/cambio_password"
        android:textColor="@color/linkColor"
        app:layout_constraintStart_toStartOf="@+id/label_textView_emailProfilo"
        app:layout_constraintTop_toBottomOf="@+id/label_textView_emailProfilo" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="invisible"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_immagineProfilo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_immagineProfilo" />


</androidx.constraintlayout.widget.ConstraintLayout>