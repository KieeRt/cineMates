<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="400dp"
    android:background="@drawable/tendina_background">


    <TextView
        android:id="@+id/titoloTendinaSalvaFilmInLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/titoloTendinaSalvaFilm"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaSalvaFilmInLista"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/semiGrey"
        app:layout_constraintEnd_toEndOf="@+id/buttonFattoTendinaSalvaFilmInLista"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaSalvaFilmInLista"
        app:layout_constraintTop_toBottomOf="@+id/titoloTendinaSalvaFilmInLista" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@color/semiGrey"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnnullaTendinaSalvaFilmInLista"
        app:layout_constraintEnd_toEndOf="@+id/buttonFattoTendinaSalvaFilmInLista"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaSalvaFilmInLista" />

    <Button
        android:id="@+id/buttonAnnullaTendinaSalvaFilmInLista"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button_textfield"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/buttonAnnulla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonFattoTendinaSalvaFilmInLista"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button_textfield"
        android:layout_marginEnd="16dp"
        android:text="@string/buttonFatto"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAnnullaTendinaSalvaFilmInLista"
        app:layout_constraintEnd_toEndOf="parent" />


    <ListView
        android:id="@+id/ListViewListeTendinaSalvaFilmInLista"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/buttonFattoTendinaSalvaFilmInLista"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaSalvaFilmInLista"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/linkCreaNuovaListaTendinaSalvaFilmInLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/testoLinkCreaNuovaListaDaTendina"
        android:textColor="@color/linkColor"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/buttonFattoTendinaSalvaFilmInLista"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695" />

</androidx.constraintlayout.widget.ConstraintLayout>