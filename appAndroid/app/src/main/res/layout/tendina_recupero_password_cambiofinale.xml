<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="400dp"
    android:background="@drawable/tendina_background">


    <TextView
        android:id="@+id/titoloTendinaSalvaFilmInLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/titoloTendinaCambioPass"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPasswordRecupero"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/semiGrey"
        app:layout_constraintEnd_toEndOf="@+id/buttonSalvaTendinaCambioPasswordRecupero"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPasswordRecupero"
        app:layout_constraintTop_toBottomOf="@+id/titoloTendinaSalvaFilmInLista" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@color/semiGrey"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnnullaTendinaCambioPasswordRecupero"
        app:layout_constraintEnd_toEndOf="@+id/buttonSalvaTendinaCambioPasswordRecupero"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPasswordRecupero" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="211dp"
        android:layout_height="19dp"
        android:layout_marginTop="24dp"
        android:text="@string/testoTendinaRecuperoPassCodice"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPasswordRecupero"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutCodice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/buttonSalvaTendinaCambioPasswordRecupero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPasswordRecupero"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCodiceConferma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Codice"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="211dp"
        android:layout_height="19dp"
        android:layout_marginTop="24dp"
        android:text="@string/testoTendinaNuovaPasswordRecupero"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPasswordRecupero"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutCodice" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputTextLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:textColorHint="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/buttonSalvaTendinaCambioPasswordRecupero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAnnullaTendinaCambioPasswordRecupero"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNuovaPasswordTendinaCambioPasswordRecupero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/nuova_password"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonAnnullaTendinaCambioPasswordRecupero"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button_textfield"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/buttonAnnulla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSalvaTendinaCambioPasswordRecupero"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button_textfield"
        android:layout_marginEnd="16dp"
        android:text="@string/buttonSalva"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAnnullaTendinaCambioPasswordRecupero"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>