<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/darkGreyGoogle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkGreyGoogle</item>
        <!-- navigationBarColor.
        <item name="android:navigationBarColor">@color/darkGreyGoogle</item> -->
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>

        <item name="editTextStyle">@style/Widget.AppCompat.EditText</item>

        <item name="popupMenuStyle">@style/PopupMenu</item>

        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">?attr/colorOnSurface</item>

        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>

    </style>


    <style name="Theme.AppAndroid.PopupOverlay2" parent="">
        <item name="colorPrimary">@color/white</item>

    </style>


    <style name="ProvaPerEdit">
        <item name="background">@drawable/background_edittext_dark</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/my_custom_popup_menu</item>

    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/semiGrey</item>
        <item name="android:dividerHeight">1dp</item>

    </style>

    <style name="Base.Widget.MaterialComponents.PopupMenu.Overflow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">5px</item>

    </style>

    <style name="Widget.MaterialComponents.PopupMenu.Overflow" parent="Base.Widget.MaterialComponents.PopupMenu.Overflow"/>

    <style name="Base.Widget.MaterialComponents.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">1px</item>

    </style>



    <style name="Widget.MaterialComponents.PopupMenu" parent="Base.Widget.MaterialComponents.PopupMenu"/>

</resources>